.socials
  list-style none
  padding 0
  margin 0
  display flex
  align-items center
  gap vw(15)
  +min-max-w(1px, $tab)
    gap vwm(15)   

  a
    display flex
    justify-content center
    align-items center
    width vw(40)
    height vw(40)
    padding vw(9)
    background-color $accent
    border 1px solid $accent
    border-radius 50%
    transition border 0.3s ease-in-out
    +min-max-w(1px, $tab)
      width vwm(40)
      height vwm(40)
      padding vwm(9)
  
    // &:hover
    //   border 1px solid $accent
    //   transition border 0.3s ease-in-out
      
    //   svg
    //     fill $accent
    //     transition fill 0.3s ease-in-out
  
  svg
    width 100%
    height 100%
    object-fit contain
    transition fill 0.3s ease-in-out
    fill $white

  &--alt
    a
      border-color $primary-color-2
      
      svg
        fill $primary-color-2

      &:hover
        border 1px solid $text-color
        transition border 0.3s ease-in-out
        
        svg
          fill $text-color
          transition fill 0.3s ease-in-out