.card-simple
  display flex
  flex-direction column
  gap vw(16)
  +min-max-w(1px, $tab)
    gap vwm(16)

  &:hover
    .card-simple__photo

      &::after
        left 100%
        transition transform .6s ease-out
        transform translateX(100%)
      img
        transform scale(1.05)
        transition transform 0.5s ease-in-out

    .card-simple__title
      h3, h4, span
        color $accent
        transition color 0.3s ease-in-out

      svg
        fill $accent
        transition fill 0.3s ease-in-out

  &__photo
    position relative
    width 100%
    height vw(194)
    border-radius vw(10)
    overflow hidden
    +min-max-w(1px, $tab)
      height vwm(149)
      border-radius vwm(10)

    &::after 
      content ""
      position absolute
      top 0
      left -100%
      width 100%
      height 100%
      background linear-gradient(
        120deg,
        rgba(255, 255, 255, 0) 40%,
        rgba(255, 255, 255, 0.4) 50%,
        rgba(255, 255, 255, 0) 60%
      )
      transform translateX(-100%)

    img
      width 100%
      height 100%
      object-fit cover
      transition transform 0.3s ease-in-out
  
  &__title
    display flex
    justify-content space-between
    gap vw(10)
    
    h3, h4, span
      font-weight 600
      font-size vw(20)
      line-height 140%
      color $main
      transition color 0.3s ease-in-out
      +min-max-w(1px, $tab)
        font-size vwm(16)

    svg
      width vw(8)
      height vw(15)
      fill $main
      transition fill 0.3s ease-in-out
      margin-top vw(8)
      +min-max-w(1px, $tab)
        width vwm(8)
        height vwm(15)
        margin-top vwm(8)