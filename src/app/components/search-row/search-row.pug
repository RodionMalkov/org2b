mixin SearchRow(additionalBlock)
  .search-row
    form.search-row__form
      .search-row__label
        .search-row__input
          input.form__input(type='text' placeholder='Поиск по порталу...')
        if additionalBlock
          .search-row__categories
            span Все категории
            svg
              use(href="./assets/images/svg/sprites/icon.svg#arrow-more" xlink:href="./assets/images/svg/sprites/icon.svg#arrow-more")
            .search-row__categories-choose
              .search-row__categories-list
                ul
                  li Все категории
                  li По всему сайту
                  li Каталог предложений
                  li Каталог спроса
                  li Организации
                  li Мероприятия

        button.btn.btn--accent(type='submit')
          svg
            use(href="./assets/images/svg/sprites/icon.svg#search" xlink:href="./assets/images/svg/sprites/icon.svg#search")
          span Найти