mixin menuList(menuList)
  .header__menu
    ul
      each item in menuList
        li
          a(href="javascript:void(0)")= item.title

-
  var menuList = [
    {title: 'О портале'},
    {title: 'Мероприятия'},
    {title: 'Организации'},
    {title: 'Услуги'},
    {title: 'Предложения'},
    {title: 'Контакты'},
    {title: 'Платежи'},
  ];

.header
  .container
    .header__wrapper
      .header__left
        .header__logo
          a(href="javascript:void(0);")
            img(data-src=`./assets/images/svg/logo.svg` src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" alt=".." class="lazy")
        button.header__region(type='button')
          svg
            use(href="#region" xlink:href="#region")
          span Санкт-Петербург
      .header__right
        .header__nav
          button.btn.btn--accent(type='button')
            .css-icon.css-icon--catalog
              span
            span Каталог
          +menuList(menuList)
        .header__actions
          button.header__actions-search(type='button')
            svg
              use(href="#search" xlink:href="#search")
          a.header__actions-phone(href="javascript:void(0);") 
            svg
              use(href="#phone" xlink:href="#phone")
          button.btn.btn--accent-alt(type='button')
            span Войти
      