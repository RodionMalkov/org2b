*,
*::before,
*::after
  box-sizing border-box

a
  text-decoration none
  color $main
  transition color .3s ease-in-out

.page
  margin-top vw(134)
  font-family $font-family
  font-size vw(16)
  font-weight 400
  +min-max-w(1px, $tab)
    margin-top vwm(88)
    font-size vwm(16)

.std-section
  margin-bottom vw(68)
  +min-max-w(1px, $tab)
    margin-bottom vwm(50)